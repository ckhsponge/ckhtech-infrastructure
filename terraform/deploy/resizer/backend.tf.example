terraform {
  # A provider requirement consists of a local name (aws),
  # source location, and a version constraint.
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.38"
    }
  }

  required_version = "~> 1.0"
}

provider "aws" {
  profile = "default" # replace if using AWS named profiles
  region = "us-east-1"
}

terraform {
  backend "s3" {
    bucket = "terraform-myproject-net" # REPLACE
    region = "us-east-1"
    acl = "bucket-owner-full-control"
    key = "resizer.tfstate" # stores state for the 'resizer' deployment, must be unique per bucket
    profile    = "default" # replace if using AWS named profiles
  }
}
